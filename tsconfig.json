{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@errors/*": ["errors/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@database/*": ["database/*"],
      "@accounts/*": ["modules/accounts/*"],
      "@car/*": ["modules/car/*"],
      "@rental/*": ["modules/rental/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
